{
  "compilerOptions": {
    "module":"ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "lib": [
      "ES6",
      "DOM"
    ],
    "sourceMap": false,
    "strict": true,
    "watch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}